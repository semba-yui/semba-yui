{
  "filters": {
    "allowlist": {},
    "comments": true
  },
  "plugins": {
    "@textlint/markdown": true
  },
  "rules": {
    "@textlint-ja/preset-ai-writing": true,
    "preset-ja-spacing": true,
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false
    },
    "prh": {
      "rulePaths": ["./prh.yml"]
    }
  }
}
